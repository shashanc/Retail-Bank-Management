@model Customer
@{
    ViewData["Title"] = "Create Customer";
}

<h1 class="display-4 text-center">Create Customer</h1>
<form asp-action="Create" asp-controller="CustomerExecutive" class="col-lg-6 offset-lg-3 ">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="SSNID">SSN ID</label>
            <input asp-for="SSNID" class="form-control" placeholder="SSN ID">
            <span asp-validation-for="SSNID" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Name">Customer Name</label>
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" placeholder="1234 Main St">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address2">Address 2</label>
        <input asp-for="Address2" class="form-control" placeholder="Apartment, studio, or floor">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="City">City</label>
            <input asp-for="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="State">State</label>
            <input asp-for="State" class="form-control" placeholder="State">
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" class="form-control">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create Customer</button>
</form>
@if (Model != null)
{
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-success" id="exampleModalLabel">Customer creation initiated successfully</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Customer Name : @Model.Name</p>
                    <p>Customer ID : @Model.CustomerID</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
@section scripts {

    <script type="text/javascript">
     $('#exampleModal').modal("show");
    </script>

}