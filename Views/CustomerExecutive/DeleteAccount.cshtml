@{
    ViewData["Title"] = "Delete Account";
}
@model DeleteAccountViewModel
<style>
    body {
        color: #fff;
        font-family: 'Roboto', sans-serif;
    }

    .form-control, .form-control:focus, .input-group-addon {
        border-color: #e1e1e1;
    }

    .form-control, .btn {
        border-radius: 3px;
    }

    .signup-form {
        width: 390px;
        margin: 0 auto;
        padding: 30px 0;
    }

        .signup-form form {
            color: #999;
            border-radius: 3px;
            margin-bottom: 15px;
            background: #fff;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .signup-form h2 {
            color: #333;
            font-weight: bold;
            margin-top: 0;
        }

        .signup-form hr {
            margin: 0 -30px 20px;
        }

        .signup-form .form-group {
            margin-bottom: 20px;
        }

        .signup-form label {
            font-weight: normal;
            font-size: 13px;
        }

        .signup-form .form-control {
            min-height: 38px;
            box-shadow: none !important;
        }

        .signup-form .input-group-addon {
            max-width: 42px;
            text-align: center;
        }

        .signup-form input[type="checkbox"] {
            margin-top: 2px;
        }

        .signup-form .btn {
            font-size: 16px;
            font-weight: bold;
            border: none;
        }

            .signup-form .btn:hover, .signup-form .btn:focus {
                outline: none;
            }

        .signup-form a {
            color: #fff;
            text-decoration: underline;
        }

            .signup-form a:hover {
                text-decoration: none;
            }

        .signup-form form a {
            color: #19aa8d;
            text-decoration: none;
        }

            .signup-form form a:hover {
                text-decoration: underline;
            }

        .signup-form .fa {
            font-size: 21px;
        }

        .signup-form .fa-paper-plane {
            font-size: 18px;
        }

        .signup-form .fa-check {
            color: #fff;
            left: 17px;
            top: 18px;
            font-size: 7px;
            position: absolute;
        }
</style>
@if (ViewData["DeleteSuccess"] as string == "true")
{
    <div style="width: 400px; margin: auto;" class="text-center alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success!</strong> Account deleted
    </div>
}
else if (ViewData["DeleteSuccess"] as string == "false")
{
    <div style="width: 400px; margin: auto;" class="text-center alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>No Account Found</strong>
    </div>
}
<div class="signup-form">
    <form asp-controller="CustomerExecutive" asp-action="GetAccount" method="get" class="form-group">
        <div class="input-group">
            <input type="text" class="form-control" name="CustomerID" placeholder="Customer ID">
            <div class="input-group-append">
                <button class="btn btn-info" type="submit">Search</button>
            </div>
        </div>
    </form>
    <form asp-controller="CustomerExecutive" asp-action="DeleteAccount" method="post">
        <h2>Delete Account</h2>
        <hr>

        <div class="form-group">
            <div class="input-group">
                @if (Model != null)
                {<input asp-for="CustomerName" class="form-control" value="@Model.CustomerName" placeholder="Customer Name" readonly> }
                else
                { <input type="text" class="form-control" value="" placeholder="Customer Name" readonly>}
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                @if (Model != null)
                {<input asp-for="AccountID" class="form-control" value="@Model.AccountID" placeholder="Account ID" readonly> }
                else
                {<input type="text" class="form-control" value="" placeholder="Account ID" readonly>}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-danger btn-lg">Delete Account</button>
        </div>
    </form>
</div>