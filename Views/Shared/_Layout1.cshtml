@inject SignInManager<IdentityUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Retail_Bank_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg shadow p-3 mb-5 bg-white rounded ">
            <a class="navbar-brand" href="#">Xplore Bank</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CashierTeller" asp-action="AccountDetails">Account Details</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle border-left" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Transactions
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="CashierTeller" asp-action="Deposit">Deposit</a>
                            <a class="dropdown-item" asp-controller="CashierTeller" asp-action="Withdraw">Withdraw</a>
                            <a class="dropdown-item" asp-controller="CashierTeller" asp-action="Transfer">Transfer</a>
                        </div>
                    </li>
                    <li class="nav-item border-left">
                        <a class="nav-link" asp-action="AccountStatement">Account Statement</a>
                    </li>
                </ul>
            </div>
            @if (signInManager.IsSignedIn(User))
            {
                <div class="form-inline my-2 my-lg-0">
                    <form method="post" asp-action="Logout" asp-controller="Home">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Logout @User.Identity.Name</button>
                    </form>
                </div>
            }
            else
            {
                <a asp-action="Login" asp-controller="Home" class="btn btn-secondary my-2 my-sm-0" type="button">Login</a>
            }

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Retail_Bank_Management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
